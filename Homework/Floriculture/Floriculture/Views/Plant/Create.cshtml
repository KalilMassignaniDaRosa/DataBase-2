@using Floriculture.Models
@model Plant

@{
    ViewData["Title"] = "Create Plant";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-3">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">
                <i class="fa-solid fa-seedling"></i> Create Plant
            </h4>
        </div>

        <div class="card-body">
            <form asp-controller="Plant" asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Nome -->
                <div class="form-group mb-3">
                    <label asp-for="PlantName" class="form-label fw-bold">
                        <i class="fa-solid fa-leaf"></i> Plant Name
                    </label>
                    <input asp-for="PlantName" class="form-control" placeholder="Enter plant name" required />
                    <span asp-validation-for="PlantName" class="text-danger"></span>
                </div>

                <!-- Sensor -->
                <div class="form-group mb-4">
                    <label asp-for="SensorValue" class="form-label fw-bold">
                        <i class="fa-solid fa-temperature-half"></i> Temperature (°C)
                    </label>
                    <input asp-for="SensorValue"
                           type="number"
                           step="0.1"
                           min="-10"
                           max="50"
                           class="form-control"
                           placeholder="Enter temperature"
                           required />
                    <span asp-validation-for="SensorValue" class="text-danger"></span>
                </div>

                <!-- Botoes -->
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fa-solid fa-arrow-left"></i> Back
                    </a>

                    <button type="submit" class="btn btn-success">
                        <i class="fa-solid fa-save"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
