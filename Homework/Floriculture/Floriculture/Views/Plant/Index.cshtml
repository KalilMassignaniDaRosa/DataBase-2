@using Floriculture.Models
@model ICollection<Plant>

@{
    ViewData["Title"] = "Plants";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">
            Crazy Dave Floriculture
        </h1>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-success">
            <i class="fa-solid fa-leaf"></i> @Model.Count Plants
        </h2>

        <a asp-controller="Plant" asp-action="Create" class="btn btn-success">
            <i class="fa-solid fa-plus"></i> New Plant
        </a>
    </div>

    <div class="card shadow-lg rounded-3">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th class="text-center" style="width:8%;"><i class="fa-solid fa-id-card"></i> Id</th>
                        <th><i class="fa-solid fa-leaf"></i> Name</th>
                        <th class="text-center" style="width:15%;"><i class="fa-solid fa-temperature-half"></i> Sensor (°C)</th>
                        <th class="text-center" style="width:20%;"><i class="fa-solid fa-clock"></i> Last Update</th>
                        <th class="text-center" style="width:10%;"><i class="fa-solid fa-pen-to-square"></i> Update</th>
                        <th class="text-center" style="width:10%;"><i class="fa-solid fa-trash"></i> Delete</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr class="align-middle">
                            <td class="text-center">@p.Id</td>

                            <td>@p.PlantName</td>

                            <td class="text-center">
                                @if (p.SensorValue.HasValue)
                                {
                                    @($"{p.SensorValue.Value:F1} °C")
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>

                            <td class="text-center">@p.SensorEvent.ToString("HH:mm - dd/MM/yyyy")</td>

                            <td class="text-center">
                                <form asp-controller="Plant" asp-action="Update" method="get" class="d-inline">
                                    <input type="hidden" name="id" value="@p.Id" />
                                    <button type="submit" class="btn btn-warning btn-sm px-2 py-1">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </button>
                                </form>
                            </td>

                            <td class="text-center">
                                <form asp-controller="Plant" asp-action="Delete" method="get" class="d-inline">
                                    <input type="hidden" name="id" value="@p.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm px-2 py-1">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
