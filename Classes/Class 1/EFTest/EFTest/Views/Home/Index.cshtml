@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5 text-center">
    <div class="card shadow-lg rounded-3 p-5">
        <h1 class="display-4 mb-4">
            <i class="fas fa-graduation-cap text-primary"></i> Welcome to Unoesc!
        </h1>
        <p class="lead mb-5">Manage your Students, Courses and Modules easily!</p>

        <div class="d-flex justify-content-center gap-3">
            <a asp-controller="Student" asp-action="Index" class="btn btn-success btn-lg">
                <i class="fas fa-users"></i> Students
            </a>

            <a asp-controller="Course" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="fas fa-book"></i> Courses
            </a>

            <a asp-controller="Module" asp-action="Index" class="btn btn-warning btn-lg">
                <i class="fas fa-bookmark"></i> Modules
            </a>
        </div>
    </div>
</div>