@using EFTest.Models.Courses
@model Course

@{
    ViewData["Title"] = "Update";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-3">
        <div class="card-header bg-warning text-white">
            <h4 class="mb-0">
                <i class="fa-solid fa-pen-to-square"></i> Update Course
            </h4>
        </div>

        <div class="card-body">
            <form asp-controller="Course" asp-action="Update" asp-route-routeId="@Model.ID" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="ID" />

                <!-- Name -->
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label fw-bold">
                        <i class="fa-solid fa-book-open"></i> Course Name
                    </label>

                    <input asp-for="Name" class="form-control" placeholder="Enter course name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-controller="Course" asp-action="Index" class="btn btn-secondary">
                        <i class="fa-solid fa-arrow-left"></i> Back
                    </a>

                    <button type="submit" class="btn btn-warning">
                        <i class="fa-solid fa-pen-to-square"></i> Update
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
