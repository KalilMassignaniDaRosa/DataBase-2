@using EFTest.Models.Courses
@model Course

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-3">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">
                <i class="fa-solid fa-book"></i> Create Course
            </h4>
        </div>

        <div class="card-body">
            <form asp-controller="Course" asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Nome -->
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label fw-bold">
                        <i class="fa-solid fa-book-open"></i> Course Name
                    </label>

                    <input asp-for="Name" class="form-control" placeholder="Enter course name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Semestre -->
                <div class="form-group mb-4">
                    <label asp-for="NumberOfSemesters" class="form-label fw-bold">
                        <i class="fa-solid fa-layer-group"></i> Number of Semesters
                    </label>
                    <input asp-for="NumberOfSemesters" class="form-control" type="number" min="1" max="12" placeholder="Enter number of semesters" />
                    <span asp-validation-for="NumberOfSemesters" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-controller="Course" asp-action="Index" class="btn btn-secondary">
                        <i class="fa-solid fa-arrow-left"></i> Back
                    </a>

                    <button type="submit" class="btn btn-success">
                        <i class="fa-solid fa-save"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>